<%content_for :action_bar do -%>
<%- if local_assigns.has_key?(:show_delete) && show_delete %>
<%= button_to "Delete", {action: :destroy, id: xref.id}, method: :delete, confirm: "Are you sure you want to delete this cross reference?", class:'btn btn-default', form_class:'inline-button-to'%>
<%end%>
<button class='btn_link' link_to='<%=data_cross_references_path(cross_reference_type: xref.cross_reference_type)%>' key_map='c'>Cancel</button>
<button class='form_to' form_id='xref_form' key_map='s'>Save</button>
<%end-%>
<h1><%=xref_info[:title]%></h1>
<h3><%=xref_info[:description]%></h3>

<div class="container" style="margin-top: 2em;">
<%= form_for xref, html: {id:'xref_form', class:'form'} do |f| %>
<%=f.hidden_field(:cross_reference_type)%>
<table>
  <%=field_row "Key", f.text_field(:key)%>
  <%=field_row "Value", f.text_field(:value)%>
</table>
<% end %>
</div>
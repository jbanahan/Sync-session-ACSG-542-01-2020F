<%content_for :javascript do %>
$(function() {
  $('#<%=@company.id.nil? ? "new_company" : "edit_company"+@company.id.to_s%>')
    .validate();
  $('#btn_save').click(function() {$("#frm_cmp").submit();});
});
<% end %>

<%content_for :action_bar do %>
  <button id='btn_save'>Save</button>
<% end %>

<%= form_for @company, :html=>{:id=>'frm_cmp'} do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= show_model_fields f, [:cmp_name, :cmp_sys_code, :cmp_agent, :cmp_broker, :cmp_carrier, :cmp_customer, :cmp_factory, :cmp_importer, :cmp_vendor, :cmp_created_at, :cmp_updated_at, :cmp_alliance, :cmp_fenix ] %>
        <%= show_custom_fields f %>
      </div>
    </div>
  </div>
<% end %>

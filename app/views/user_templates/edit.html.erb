<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%=form_for @user_template, html:{id: 'template-form'} do |f|%>
      <div class="card">
        <h5 class="card-header">Edit User Template</h5>
        <div class="card-body">
          <%=f.label :name%>
          <%=f.text_field :name, class:'form-control'%>
          <%=f.label :template_json, 'JSON'%>
          <%=f.text_area :template_json, class:'form-control'%>
        </div>
        <div class="card-footer text-right">
          <a href='<%=user_templates_path%>' class='btn btn-secondary'>Cancel</a>
          <%=f.submit 'Update', class:'btn btn-primary'%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#template-form').submit(function(evt) {
    return UserTemplate.validateForm($('#template-form'));
  });
</script>

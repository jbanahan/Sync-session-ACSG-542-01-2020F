<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%=form_for @user_template, html:{id: 'template-form'} do |f|%>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Edit User Template</h3>
        </div>
        <div class="panel-body">
          <%=f.label :name%>
          <%=f.text_field :name, class:'form-control'%>
          <%=f.label :template_json, 'JSON'%>
          <%=f.text_area :template_json, class:'form-control'%>
        </div>
        <div class="panel-footer text-right">
          <a href='<%=user_templates_path%>' class='btn btn-default'>Cancel</a>
          <%=f.submit 'Update', class:'btn btn-primary'%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#template-form').submit(function(evt) {
    return UserTemplate.validateForm($('#template-form'));
  });
</script>
<table style='width:100%;'>
  <tr>
    <td style='width: 50%; vertical-align: top;'>
      <h2>Needs US Classification</h2>
      <% if @products_without_hts.length == 0 %>
      No products missing HTS
      <% else %> 
      <table class='detail_table'>
        <thead>
          <tr><th>Name</th><th>Last Updated</td></tr>
        </thead>
        <tbody>
      <% @products_without_hts.each do |p| %>
      <tr class='hover'><td><%= link_to p.name, product_path(p)%></td><td><%=p.updated_at%></td></tr>
      <% end %>
        </tbody>
      </table>
      <% end %>
    </td>
    <td style=' vertical-align: top;'>
      <h2>Needs Approval</h2>
      <% if @products_not_approved.length == 0%>
      All products approved.
      <% else %>
      <table class='detail_table'>
        <thead><tr><th>Name</th><th>Last Updated</th></tr></thead>
        <tbody>
          <%@products_not_approved.each do |p|%>
          <tr class='hover'><td><%= link_to p.name, product_path(p)%></td><td><%=p.updated_at%></td></tr>
          <%end%>
        </tbody>
      </table>
      <% end %>
    </td>
  </tr>
</table>

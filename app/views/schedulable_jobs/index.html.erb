<%-content_for :action_bar do-%>
  <button class="btn_link" link_to="<%=new_schedulable_job_path%>">New</button>
<%-end-%>
<div class='container'>
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Schedulabe Jobs</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class='detail_table'>
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Class</th>
            <th>Time</th>
            <th>Days</th>
            <th>Options</th>
            <th>Last Run</th>
          </tr>
        </thead>
        <tbody>
          <%-@schedulable_jobs.each do |sj|-%>
          <tr class='hover'>
            <td><%=link_to 'Edit', edit_schedulable_job_path(sj), {class:'btn btn-mini'}%></td>
            <td><%=sj.run_class%></td>
            <td><%=sj.run_hour%>:<%=sj.run_minute%> <%=sj.time_zone_name%></td>
            <td>
              <%-if sj.day_of_month -%>
                <%=sj.day_of_month.ordinalize%> of the month.<br />
              <%-end-%>
              <%=[:monday,:tuesday,:wednesday,:thursday,:friday,:saturday,:sunday].collect {|d| sj.attributes["run_#{d}"] ? d.to_s.titleize : nil}.compact.join(', ')%>
            </td>
            <td>
<pre>
<%=sj.opts%>
</pre>
            </td>
            <td><%=sj.last_start_time%></td>
          </tr>
          <%-end-%>
        </tbody>
      </table>
    </div>
  </div>
</div>

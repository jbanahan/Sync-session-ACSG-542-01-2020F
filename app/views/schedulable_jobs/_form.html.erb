<%-content_for :action_bar do-%>
  <button class="form_to" form_id="frm_sj">Save</button>
  <%=button_to "Delete", @sj, method: :delete, class:'btn btn-default', form_class:'inline-button-to', confirm:'Are you sure you want to delete this?'-%>
  <button class="btn_link" link_to="<%=schedulable_jobs_path%>">Cancel</button>
<%-end-%>
<div class="container">
  <div class="row">
    <div class="span12 text-center">
      <h1>Schedulabe Job</h1>
    </div>
  </div>
  <%=form_for @sj, html:{id:'frm_sj'} do |f|-%>
    <%=field_bootstrap 'Class', f.text_field(:run_class)-%>
    <%=field_bootstrap 'Time', f.number_field(:run_hour,min:0,max:23,style:'width:4em;')+':'+f.number_field(:run_minute,min:0,max:59,style:'width:4em;')+' '+f.time_zone_select(:time_zone_name,ActiveSupport::TimeZone.us_zones)-%>
    <%=field_bootstrap 'Day of Month (optional)', f.number_field(:day_of_month,min:0,max:31)-%>
    <%=field_bootstrap 'Run Days', [:monday,:tuesday,:wednesday,:thursday,:friday,:saturday,:sunday].collect {|d| '<div>'.html_safe+ f.check_box("run_#{d}".to_sym)+" #{d.to_s.titleize}</div>".html_safe}.join.html_safe-%>
    <%=field_bootstrap 'Options', f.text_area(:opts,rows:10)-%>
    <%=field_bootstrap 'Last Start Time', @sj.last_start_time.blank? ? 'Never' : @sj.last_start_time-%>
  <%-end-%>
</div>

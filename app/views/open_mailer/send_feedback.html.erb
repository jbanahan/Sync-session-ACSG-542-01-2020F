<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
  <head>
	  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  </head>
  <body>
  <h1>Feedback from <%=@user.full_name%> @ <%=@user.company.name%></h1>
  <table>
    <tr><th>Message From User</th></tr>
    <tr><td><pre><%=@params[:message]%></pre></td></tr>
  </table>
  <table style='border:1px solid #707070'>
    <tr><th>Property</th><th>Value</th></tr>
    <tr><td>Requires Response</td><td><%=@params[:respond]%></td></tr>
    <tr><td>User Email:</td><td><%=@user.email%></td></tr>
    <tr><td>Request Host</td><td><%=@request.host%></td></tr>
    <tr><td>IP Address</td><td><%=@request.remote_ip%></td></tr>
    <tr><td>Source Location</td><td><%=@params[:location]%></td></tr>
    <%=@params[:source_page].each do |k,v| %>
    <tr><td>Source Param: <%=k%></td><td><%=v%></td></tr>
    <% end %>
  </table>
  </body>
</html>

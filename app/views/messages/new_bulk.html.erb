<%content_for :action_bar do %>
  <button id='btn_submit'>Send</button>
<%end%>
<%content_for :javascript do%>
$(function() {
  $("#btn_submit").click(function() {
    $("#frm_send_to_users").submit();
  });
});
<%end%>

<div class="container">
  <%= form_tag send_to_users_messages_path, :method => :post, :id => :frm_send_to_users do %>
    <div class="col-md-6">
      <div class="row">
        <label>Recipients</label>
        <select name='receivers[]' multiple='multiple' size='15' style='width:100%;'>
          <% @companies.each do |c|%>
            <optgroup label='<%=c.name%>'>
              <%c.users.sort_by {|n| n.full_name.upcase}.each do |u|%>
                <option value='<%=u.id%>'><%=u.full_name%></option>
              <%end%>
            </optgroup>
          <%end%>
        </select>  
      </div>
      <br>
      <div class="row">
        <div class="form-group">
          <label>Subject</label>
          <%= text_field_tag :message_subject, nil, class: "form-control"%>
        </div>
        <div class="form-group">
          <label>Body</label>
          <%= text_area_tag :message_body, nil,:rows=>10, class: "form-control" %>
          <p>Body text can be formatted using the <a href='http://redcloth.org/hobix.com/textile/quick.html' target='_blank'>Markdown</a> syntax.</p>
        </div>
      </div> 
    </div>
  <% end %>
</div>
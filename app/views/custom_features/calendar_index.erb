<% content_for :head_tags do %>
<style type="text/css">
  #layout thead td {padding-left: 3px; padding-right: 3px; border: 1px solid black;}
  #layout {margin-top: 20px; margin-bottom: 25px;}
</style>
<% end %>

<% content_for :upload_form do %>
<h2>Upload ONLY .csv, .xls or .xlsx files</h2>
<h4>The following data columns should be present in your file in the <b>same order</b> as listed below.</h4>
<table id="layout">
  <thead>
    <tr>
      <td><b>*</b>Calendar Type</td>
      <td><b>*</b>Calendar Year</td>
      <td>Calendar Company</td>
      <td><b>*</b>Event Date</td>
      <td>Event Label</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="5">* Denotes columns that MUST have values in them.  If values are not present in all columns with a *, the file will not process.</td>
    </tr>
  </tbody>
</table>
<% end %>

<%= render :partial=> "custom_file_upload", :locals => {title: "VFI Track Calendar Upload", custom_feature: "calendar"} %>

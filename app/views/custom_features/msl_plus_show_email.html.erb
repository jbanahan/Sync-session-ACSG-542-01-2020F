<%content_for :action_bar do %>
  <button class="form_to" form_id="frm_em">Send</button>
  <button class="btn_link" link_to="/custom_features/msl_plus/<%=@file.id%>">Cancel</button>
<%end%>
<%=form_tag "/custom_features/msl_plus/#{@file.id}/email", :method => :post, :id=>'frm_em' do -%>
  <table>
    <%=field_row "To", text_field_tag(:to)%>
    <%=field_row "Copy Me", check_box_tag(:copy_me,'yes', true) %>
    <%=field_row "Subject", text_field_tag(:subject, "[chain.io] MSL+ File")%>
    <%=field_row "Body", text_area_tag(:body, "#{current_user.full_name} has sent you the attached file from chain.io.")%>
  </table>
<% end %>

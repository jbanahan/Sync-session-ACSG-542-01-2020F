<%=form_for AttachmentType.new do |f| %>
  <table class='detail_table' style="border-spacing: 0 5px; border-collapse: separate;">
    <thead>
      <tr>
        <th>Attachment Type</th>
      <% if MasterSetup.get.custom_feature?("Kewill Imaging") %>
        <th>Imaging Document Code</th>
        <th>Imaging Document Type</th>
      <% end %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%@attachment_types.each do |a|%>
      <tr class='hover'>
        <td><%=a.name%></td>
      <% if MasterSetup.get.custom_feature?("Kewill Imaging") %>
        <td><%=a.kewill_document_code%></td>
        <td><%=a.kewill_attachment_type%></td>
      <% end %>
        <td><%=link_to 'Delete', a, :confirm => "Are you sure you want to delete this attachment type?", :method => :delete, :class=>'btn btn-small'%></td>
      </tr>
      <%end%>
    </tbody>
    <tfoot>
      <tr>
        <th>Attachment Type</th>
      <% if MasterSetup.get.custom_feature?("Kewill Imaging") %>
        <th>Imaging Document Code</th>
        <th>Imaging Document Type</th>
      <% end %>
        <th></th>
      </tr>
      <tr class='hover'>
        <td><%=f.text_field :name%></td>
      <% if MasterSetup.get.custom_feature?("Kewill Imaging") %>
        <td><%=f.text_field :kewill_document_code%></td>
        <td><%=f.text_field :kewill_attachment_type%></td>
      <% end %>
        <td><%=f.submit 'Add', :class=>'btn btn-small btn-primary' %></td>
      </tr>
    </tfoot>
  </table>
<%end%>

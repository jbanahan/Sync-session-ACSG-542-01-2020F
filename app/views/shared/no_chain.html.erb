<div class="container">
  <div class="row">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Site Address Change</h3>
      </div>
      <div class="panel-body">
        <p>
          This site's address has changed.  Please use <code><%=@new_domain%></code>.
        </p>
        <p>
          You will be redirected to <a href='<%=@new_url%>'><%=@new_url%></a> in 10 seconds (or you can click the link to go there now).
        </p>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    setTimeout(function() {
      window.location = '<%=@new_url%>/?noredir=true'
    },5000);
  });
</script>

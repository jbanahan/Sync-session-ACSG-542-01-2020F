<%=link_to "View", send("#{obj.class.to_s.underscore}_path",obj,:c_pos=>cursor) %> 
<%if obj.respond_to?('can_edit?') && obj.can_edit?(current_user)%>
  | <%=link_to "Edit", send("edit_#{obj.class.to_s.underscore}_path",obj,:c_pos=>cursor)%>
<%end%>
<%if obj.respond_to?('can_classify?') && obj.can_classify?(current_user)%>
  | <%=link_to "Classify", send("classify_#{obj.class.to_s.underscore}_path",obj,:c_pos=>cursor)%>
<%end%>

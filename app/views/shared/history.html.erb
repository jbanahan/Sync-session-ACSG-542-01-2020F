<%content_for :action_bar do %>
  <button class='btn_link' link_to='<%=url_for(@base_object)%>' key_map='b'>Back</button>
  <button id='btn_xpnd'>Show All</button>
  <button id='btn_clpse'>Hide All</button>
<%end%>
<%content_for :javascript do %>
  $(function() {
    $("form.frm_restore").submit(function() {
      return window.confirm("Restoring will overwrite the current values with the values from this history entry.\n\n Are you sure you want to continue?");
    });
    $("#btn_xpnd").click(function() {
      $('#accordion .panel-collapse').collapse('show');
    });
    $("#btn_clpse").click(function() {
      $('#accordion .panel-collapse').collapse('hide');
    });
  });
<%end%>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>History: <%=CoreModule.find_by_object(@base_object).unique_id_field.process_export(@base_object,current_user)%></h2>
    </div>
  </div>
  <%unless @base_object.sync_records.empty? -%>
    <div class="row">
      <div class="col-md-12">
        <table class='table table-striped table-condensed'>
          <thead>
            <tr>
              <th>&nbsp;</th><th>System</th><th>Record Sent</th><th>Confirmation Received</th><th>Confirmation File Name</th><th>Failure Message</th>
            </tr>
          </thead>
          <tbody class="table-hover">
            <%@base_object.sync_records.each do |sr|-%>
            <tr class='<%=sr.problem? ? 'danger' : sr.sent_at.nil? ? 'warning' : 'success' %>'>
              <td><%=form_for sr, :url=>resend_sync_record_path(sr), :method=>:post do |f| %>
                  <%=sr.sent_at.nil? ? "Awaiting Sync" : "<button class='btn btn-xs'>Resend</button>".html_safe%>
                  <% end %>
              </td>
              <td><%=sr.trading_partner%></td>
              <td><%=sr.sent_at%></td>
              <td><%=sr.confirmed_at%></td>
              <td><%=sr.confirmation_file_name%></td>
              <td><%=sr.failure_message%></td>
            </tr>
            <%end-%>
          </tbody>
        </table>
      </div>
    </div>
  <%end-%>
  <div class="row">
    <div class="col-md-12">
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <%-@snapshots.each do |s|-%>
          <% d = s.diff_vs_previous %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id='heading<%+s.id%>'>
              <h4 class="panel-title">
                <a  data-toggle='collapse' data-parent='accordion' href='#collapse<%=s.id%>'>
                  <%=s.created_at%>: <%=s.user.try(:full_name)%> <%="(#{s.user.company.name})"%>
                </a>
                <%if !s.context.blank?%>
                  <p><small><%=s.context%></small></p>
                <%end%>
              </h4>
            </div>
            <div id="collapse<%=s.id%>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%=s.id%>">
              <%if s.imported_file_id%>
                <div style='float:right'>(Created By File: <%= link_to s.imported_file.attached_file_name, s.imported_file  %>)</div>
              <%end%>
              <%if s.bulk_process_log_id%>
                <div style='float:right'>(Created By <%= link_to s.bulk_process_log.bulk_type, s.bulk_process_log  %>)</div>
              <%end  %>
              <%=render :partial=>'shared/history_widget', :locals=>{:diff=>d, :am_root=>true}%>
              <% if @base_object.respond_to?(:can_edit?) && @base_object.can_edit?(current_user)-%>
                <div class='history_actions text-right'>
                  <%=form_for s, :url=>restore_entity_snapshot_path(s), :method=>:post, :html=>{:class=>'frm_restore'} do |f|%>
                    <%=f.submit "Restore", :class=>'btn btn-danger btn-sm'%>
                  <%end%>
                </div>
              <% end -%>
            </div>
          </div>
        <%-end-%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%=will_paginate @snapshots%>
    </div>
  </div>
</div>
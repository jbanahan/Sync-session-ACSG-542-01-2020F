<%content_for :action_bar do %>
  <button class='btn_link' link_to='<%=url_for(@base_object)%>' key_map='b'>Back</button>
<%end%>
<%content_for :javascript do %>
  $(function() {
    $("form.frm_restore").submit(function() {
      return window.confirm("Restoring will overwrite the current values with the values from this history entry.\n\n Are you sure you want to continue?");
    });
  });
<%end%>
<%unless @base_object.sync_records.empty? -%>
<h2>System Sync</h2>
<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>&nbsp;</th><th>System</th><th>Record Sent</th><th>Confirmation Received</th><th>Confirmation File Name</th><th>Failure Message</th>
    </tr>
  </thead>
  <tbody class="table-hover">
    <%@base_object.sync_records.each do |sr|-%>
    <tr class='<%=sr.problem? ? 'danger' : sr.sent_at.nil? ? 'warning' : 'success' %>'>
      <td><%=form_for sr, :url=>resend_sync_record_path(sr), :method=>:post do |f| %>
          <%=sr.sent_at.nil? ? "Awaiting Sync" : "<button class='btn btn-xs'>Resend</button>".html_safe%>
          <% end %>
      </td>
      <td><%=sr.trading_partner%></td>
      <td><%=sr.sent_at%></td>
      <td><%=sr.confirmed_at%></td>
      <td><%=sr.confirmation_file_name%></td>
      <td><%=sr.failure_message%></td>
    </tr>
    <%end-%>
  </tbody>
</table>
<%end-%>
<h1>History: <%=CoreModule.find_by_object(@base_object).unique_id_field.process_export(@base_object,current_user)%></h1>
<div>
  <%@snapshots.each do |s| %>
    <div class='history_entry'>
      <% d = s.diff_vs_previous %>
      <div class='history_title'>
        <%if s.imported_file_id%>
        <div style='float:right'>(Created By File: <%= link_to s.imported_file.attached_file_name, s.imported_file  %>)</div>
        <%elsif s.bulk_process_log_id%>
        <div style='float:right'>(Created By <%= link_to s.bulk_process_log.bulk_type, s.bulk_process_log  %>)</div>
        <%end  %>
        <div style='float:left'><%=s.created_at %>: <%=s.user.full_name%></div>
        <div style='clear:both'></div> 
      </div>
      <div style='margin-left:1em;'>
        <%=render :partial=>'shared/history_widget', :locals=>{:diff=>d}%>
      </div>
      <% if @base_object.respond_to?(:can_edit?) && @base_object.can_edit?(current_user)-%>
        <div class='history_actions'>
          <%=form_for s, :url=>restore_entity_snapshot_path(s), :method=>:post, :html=>{:class=>'frm_restore'} do |f|%>
            <%=f.submit "Restore"%>
          <%end%>
        </div>
      <% end -%>
    </div>
  <%end%>
  <%if @snapshots.blank? %>
    This item does not have any history records.  It might have been created before history tracking was turned on.
  <%end%>
  <%=will_paginate @snapshots%>
</div>

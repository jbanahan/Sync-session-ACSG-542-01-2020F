<%= form_tag "/tracker", :method=>"get", :class=>'form-group' do%>
<div class="row">
  <div class='col-md-5'>
    <select name='f' class='form-control'>
      <%PublicField.where(:searchable=>true).each do |pf|%>
      <% mf = ModelField.find_by_uid pf.model_field_uid%>
      <% if !mf.blank? %>
      <option value='<%=mf.uid%>' <%=@field && @field==mf.uid ? "selected='true'" : ""%>><%=mf.label%></option>
      <% end%>
      <%end%>
    </select>
  </div>
  <div class='col-md-4 pl-md-0'>
    <%= text_field_tag :v, @value, :class=>'form-control'%>
  </div>
  <div class='col-md-3 pl-md-0'>
    <%= submit_tag "Search", :class=>'btn btn-primary'%>
  </div>
</div>
<%end%>

<% if rule_state %>
  <% content_for :action_bar do %>
    <%=business_rules_button rule_state, validation_path, state: rule_state %>
  <% end %>
  <% 
    failed_state = BusinessValidationResult.fail_state?(rule_state)
    review_state = BusinessValidationResult.review_state?(rule_state)
  %> 
  <% if failed_state || review_state %>
    <div class="row">
      <div class="col-md-12">
        <div class='card<%= failed_state ? " alert-danger" : (review_state ? " alert-warning" : "") %>'>
          <div class='card-header'>Business Rules</div>
          <div class='card-body bg-white'>
            <div>
            <% if failed_state %>
              Business rules have failed.  Click the <%=link_to("<i class='fa fa-medkit text-danger'></i>".html_safe, validation_path)%> button to review.
            <% elsif review_state %>
              Business rules are in review status.  Click the <%=link_to("<i class='fa fa-medkit text-warning'></i>".html_safe, validation_path)%> button to review.
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

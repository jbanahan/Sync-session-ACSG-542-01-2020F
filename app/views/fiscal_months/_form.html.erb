<% content_for :javascript do -%>
  
<% end %>
<%content_for :action_bar do -%>
  <%- if local_assigns.has_key?(:show_delete) && show_delete %>
  <%= button_to "Delete", {action: :destroy, id: fm.id}, method: :delete, confirm: "Are you sure you want to delete this fiscal month?", class:'btn btn-default', form_class:'inline-button-to'%>
  <%end%>
  <button class='btn_link' link_to='<%= company_fiscal_months_path(company) %>' key_map='c'>Cancel</button>
  <button class='form_to' form_id='fiscal_month_form' key_map='s'>Save</button>
<%end-%>

<div class="container">
  <h1>Fiscal Month: <%= company.name %></h1><br>

  <div class="container" style="margin-top: 2em;">
  <%= form_for [company, fm], html: {id:'fiscal_month_form', :class =>'form'} do |f| %>
    <%=f.hidden_field(:company_id)%>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label>Fiscal Year</label>
          <%= f.text_field :year, value: fm.year, :class => "form-control"%>
        </div>
        <div class="form-group">
          <label>Fiscal Month (1-12)</label>
          <%= f.text_field :month_number, value: fm.month_number, :class => "form-control"%>
        </div>
        <div class="form-group">
          <label>Actual Start Date</label>
          <%= f.text_field :start_date, value: fm.start_date, :class => "form-control isdate"%>
        </div>
        <div class="form-group">
          <label>Actual End Date</label>
          <%= f.text_field :end_date, value: fm.end_date, :class => "form-control isdate"%>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<style>
.ent_columns {
  width:99%;
}
.ent_columns tbody {
  vertical-align:top;
}
.ent_columns .label_cell {
  width:0;
}
.quick_jump {
  text-align: center;
  margin-bottom: 5px;
}
.qj_label {
  font-weight: bold;
  padding-right: 1em;
}
</style>
<div class='quick_jump'><span class='qj_label'>Jump To:</span>
  <a href='#c_invoices'>Commercial Invoices</a> |
  <a href='#b_invoices'>Broker Invoices</a>
</div>
<!-- Main header -->
<table class='ent_columns'>
  <tbody>
    <tr>
      <td style="width:33%;">
        <table>
          <%[:ent_entry_num,:ent_brok_ref,:ent_customer_references].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:33%;">
        <table>
          <%[:ent_merch_desc,:ent_mbols,:ent_hbols].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:34%;">
        <table>
          <%[:ent_cust_name,:ent_vendor_names,:ent_po_numbers].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
    </tr>
  </tbody>
</table>
<hr />
<!-- Dates -->
<table class='ent_columns'>
  <tbody>
    <tr>
      <td style="width:33%;">
        <table>
          <%[:ent_export_date,:ent_filed_date,:ent_arrival_date,:ent_release_date].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:33%;">
        <table>
          <%[:ent_free_date,:ent_duty_due_date,:ent_liq_date].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:34%;">
        <table>
          <%[:ent_last_billed_date,:ent_invoice_paid_date].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
    </tr>
  </tbody>
</table>
<hr />
<table class='ent_columns'>
  <tbody>
    <tr>
      <td style="width:33%;">
        <table>
          <%[:ent_type,:ent_mfids,
            :ent_lading_port_name, :ent_unlading_port_name, :ent_entry_port_name,
            :ent_export_country_codes,:ent_origin_country_codes,:ent_spis
          ].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:33%;">
        <table>
          <%[:ent_ult_con_name,:ent_transport_mode_code,:ent_carrier_code,:ent_sbols,:ent_it_numbers,:ent_container_nums, :ent_container_sizes,:ent_fcl_lcl,:ent_ult_con_code,:ent_cust_num,:ent_comp_num,:ent_div_num].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
      <td style="width:34%;">
        <table>
          <%[:ent_total_fees,:ent_total_duty,:ent_total_duty_direct,:ent_cotton_fee, :ent_hmf, :ent_mpf,:ent_entered_value,:ent_total_invoiced_value,:ent_gross_weight,:ent_total_units,:ent_total_units_uoms,:ent_total_packages,:ent_total_packages_uom].each do |f|%>
            <%=field_view_row @entry, f %>
          <%end%>
        </table>
      </td>
    </tr>
  </tbody>
</table>
<hr />
<a name='c_invoices'></a>
<%if @entry.commercial_invoices.count >1%>
  <h2>Commercial Invoice Summary</h2>
  <%ci_summary_fields = [:ci_invoice_number,:ci_vendor_name,:ci_invoice_value,:ci_gross_weight]%>
  <table class='detail_table'>
    <thead><tr>
      <%ci_summary_fields.each do |f|%>
        <th><%=field_label f, false%></th>
      <%end%>
    </tr></thead>
    <tbody>
      <%@entry.commercial_invoices.each do |ci|%>
        <tr class='hover'>
          <%ci_summary_fields.each do |f|%>
            <td><%=f==:ci_invoice_number ? link_to(field_value(ci,f),"#ci_#{ci.id}") : field_value(ci, f)%></td>
          <%end%>
        </tr>
      <%end%>
    </tbody>
  </table>
  <hr />
<% end%>
<%@entry.commercial_invoices.each do |ci|%>
  <a name='ci_<%=ci.id%>'></a>
  <table class='ent_columns'>
    <tbody>
      <tr><td colspan='2'><h3><%=field_label :ci_invoice_number, false%> - <%=field_value(ci,:ci_invoice_number)%></h3></td></tr>
      <tr>
        <td style='width:50%;'>
          <table>
            <%[:ci_vendor_name,:ci_mfid,:ci_invoice_date,:ci_gross_weight,:ci_country_origin_code].each do |f|%>
              <%=field_view_row ci,f,false%>
            <%end%>
          </table>
        </td>
        <td style='width:50%;'>
          <table>
            <%[:ci_invoice_value,:ci_total_charges,:ci_invoice_value_foreign,:ci_currency].each do |f|%>
              <%=field_view_row ci,f,false%>
            <%end%>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
  <%=render :partial=>'shared/detail_table', :locals=>{:fields=>[:cil_part_number,:cil_po_number,:cil_units,:cil_uom,:cil_value,:cil_country_origin_code,:cil_country_export_code,:cil_related_parties,:cil_volume],:lines=>ci.commercial_invoice_lines}%>
  <hr />
<%end%>
<%=render :partial => 'shared/attachments', :locals => {:attachable => @entry} %>

<% if @e.sync_records.empty? %>
  <h2 align="center">
    There are no sync records available for the selected entry.  
  </h2>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2 align="center">
        System Sync
      </h2>
      <br>
      <table class='table table-striped table-condensed'>
        <thead>
          <tr>
            <th>&nbsp;</th><th>System</th><th>Record Sent</th><th>Confirmation Received</th><th>Confirmation File Name</th><th>Failure Message</th>
          </tr>
        </thead>
        <tbody class="table-hover">
          <%@e.sync_records.each do |sr|-%>
          <tr class='<%=sr.problem? ? 'danger' : sr.sent_at.nil? ? 'warning' : 'success' %>'>
            <td><%=form_for sr, :url=>resend_sync_record_path(sr), :method=>:post do |f| %>
                <%=sr.sent_at.nil? ? "Awaiting Sync" : "<button class='btn btn-xs'>Resend</button>".html_safe%>
                <% end %>
            </td>
            <td><%=sr.trading_partner%></td>
            <td><%=sr.sent_at%></td>
            <td><%=sr.confirmed_at%></td>
            <td><%=sr.confirmation_file_name%></td>
            <td><%=sr.failure_message%></td>
          </tr>
          <%end-%>
        </tbody>
      </table>
    </div>
  </div>
<%end-%>

<%content_for :action_bar do %>
  <button class='btn_link' link_to='<%=url_for(@e)%>' key_map='b'>Back</button>
<%end%>
<script>
  $(function() {
    $("#user_session_submit").button();
  });
</script>
<%= form_for(@user_session) do |f| %>
  <table>
    <%=field_row f.label(:username), f.text_field(:username,"class"=>"focus_first")%>
    <%=field_row f.label(:password), f.password_field(:password)%>
    <%=field_row f.label(:remember_me), f.check_box(:remember_me)%>
  </table>
  <div class="actions">
    <%= f.submit 'Log In' %>
  </div>
<% end %>

<script>
  $(function() {
    $( "#user_session_submit" )
      .button();
  });
	$(document).ready(function(){
		$("#user_session_username").focus();
	});
</script>
<%= form_for(@user_session) do |f| %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  </div>
  <div class="actions">
    <%= f.submit 'Log In' %>
  </div>
<% end %>

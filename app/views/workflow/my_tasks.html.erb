<div class='container-fluid task-wrap'>
  <div class='row' style='margin-bottom:10px;'>
    <div class="col-md-12">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class='glyphicon glyphicon-cog'></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><a href="#" class='task-email-toggle'><span class='task-email-check-wrap'><%if current_user.task_email?%><span class='glyphicon glyphicon-ok'></span><%end%></span> Send daily task summary</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#wf-my-assigned" data-toggle="tab">Assigned To Me</a></li>
        <li><a href="#wf-my-tasks" data-toggle="tab" tab-src='/my_tasks/by_page_panel'>By Page</a></li>
        <li><a href="#wf-my-due" data-toggle="tab" tab-src='/my_tasks/by_due_panel'>By Due Date</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active workflow-pane" id="wf-my-assigned">
          <%=due_for_me_panel%>
        </div>
        <div class="tab-pane workflow-pane" id="wf-my-tasks">
          <div class='loader'>loading</div>
        </div>
        <div class="tab-pane workflow-pane" id="wf-my-due">
          <div class='loader'>loading</div>
        </div>
      </div>
    </div>
  </div>
</div>
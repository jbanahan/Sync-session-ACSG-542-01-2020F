<%content_for :javascript do %>
$(function() {
  $("#btn_save").click(function() {$("#frm_bu").submit();});
  $("#btn_cancel").click(function() {window.location='<%=request.referrer%>';});
  OpenChain.initClassifyPage();
  OpenChain.addClickMap('s','Save','btn_save');
  OpenChain.addClickMap('c','Cancel','btn_cancel');
  OpenChain.activateHotKeys();
});
<%end%>
<%content_for :action_bar do %>
  <button id='btn_save'>Save</button>
  <button id='btn_cancel'>Cancel</button>
<%end%>
<div class='bulk_header_inner'>
  Changes will be applied to <strong><%=pluralize @search_run ? @search_run.total_objects : @pks.size, CoreModule::PRODUCT.label.downcase%></strong>.<br />
  <span class='error'>Warning: Clicking save will replace ALL classifications for the selected products.</span>
</div>
<%=form_for @base_product, :url=>bulk_update_products_path, :html=>{:method=>"POST", :id=>"frm_bu"} do |f| %>
  <%unless @back_to.blank?%>
    <%=hidden_field_tag 'back_to', @back_to%>
  <%end%>
  <%if @search_run %>
    <%=hidden_field_tag "sr_id", @search_run.id%>
  <%else%>
    <%@pks.each do |k,v|%>
      <%=hidden_field_tag "pk[#{k}]", v %>
    <%end%>
  <%end%>
  <div class='container'>
    <div class='row'>
      <%if current_user.edit_products?-%>
        <div class='span6'>
          <%=render :partial=> 'product_edit', :locals=>{:form_obj => f,:hide_no_bulk_fields=>true}%>
        </div>
      <%end-%>
      <%if current_user.edit_classifications? -%>
        <div class='span6'>
          <%=render :partial=> 'classify', :locals=>{:form_obj => f}%>
        </div>
      <%end-%>
    </div>
  </div>
<% end %>

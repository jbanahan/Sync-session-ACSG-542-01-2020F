<% content_for :javascript do %>
$(function() {
  $("#btn_save").button().click(function() {
    checkUOMChange();
  });
  $("#btn_cancel").button().click(function() {
    window.location = '<%=url_for @product%>';
  });
  $(".tf_remove").click(function(ev) {
    destroy_nested('tf',$(this));
    ev.preventDefault();
  });
  $(".cf_remove").click(function(ev) {
    destroy_nested('cf',$(this));
    ev.preventDefault();
  });
});
function checkUOMChange() {
  ou = $("#original_uom").val();
  if(ou.length==0 || ou==$("#txt_uom").val()) {
    return $("#frm_prod").submit();
  } else {
    $('<div></div>')
    .html("<p>Are you sure you want to change the unit of measure?</p><p>This will change the unit of measure for <em>all</em> existing orders, shipments, inventory, etc.</p><p>If you have a new unit of measure for upcoming orders, click <a href='/products/new'>here</a> to create a new product.")
    .dialog({title:'Are you sure?',
      buttons:{"Yes":function() {$("#frm_prod").submit();},"No":function() {$(this).dialog('close');}}}
    );
  }
}
function destroy_nested(prefix, link) {
  link.prev('.'+prefix+'_destroy').attr('value','true');
  link.parents('.'+prefix+'_row').fadeOut();
}
function add_tf_row(link,parent_index) {
  my_index = new Date().getTime();
  content = "<tr class=\"hover tf_row\">"
  for(i=1; i<4; i++) {
    content = content +"<td><input id=\"product_classifications_attributes_"+parent_index+"_tariff_records_attributes_"+my_index+"_hts_"+i+"\" name=\"product[classifications_attributes]["+parent_index+"][tariff_records_attributes]["+my_index+"][hts_"+i+"]\" size=\"30\" type=\"text\" /></td>"; 
  }
  content = content + "<td><input class=\"tf_destroy\" id=\"product_classifications_attributes_"+parent_index+"_tariff_records_attributes_"+my_index+"__destroy\" name=\"product[classifications_attributes]["+parent_index+"][tariff_records_attributes]["+my_index+"][_destroy]\" type=\"hidden\" value=\"false\" /><a href=\"#\" class=\"tf_remove\">Remove</a></td></tr>"
  link.parents('.tr_body').append(content);
}
<% end %>

<% content_for :action_bar do %>
<button id='btn_save'>Save</button>
<button id='btn_cancel'>Cancel</button>
<% end %>

<%= form_for @product, :html=>{:id=>'frm_prod'} do |f| %>
<table>
<tr class='hover'><td class='label_cell'><%= f.label :unique_identifier, "Unique ID" %>:</td><td><%= f.text_field :unique_identifier %></td></tr>
<tr class='hover'><td class='label_cell'><%= f.label :name %>:</td><td><%= f.text_field :name %></td></tr>
<tr class='hover'><td class='label_cell'><%= f.label :description %>:</td><td><%= f.text_field :description %></td></tr>
<tr class='hover'><td class='label_cell'><%= f.label :unit_of_measure %>:</td><td><%= f.text_field :unit_of_measure, :id=>'txt_uom' %><input type='hidden' name='original_uom' id='original_uom' value='<%=@product.unit_of_measure%>' /></td></tr>
<tr class='hover'><td class='label_cell'><%= f.label :vendor %>:</td><td><%= f.collection_select :vendor_id, Company.find_vendors.not_locked, :id, :name, options ={:prompt => "-Select a vendor"} %></td></tr>
<tr class='hover'><td class='label_cell'><%= f.label :division %>:</td><td><%= f.collection_select :division_id, Division.all, :id, :name, options ={:prompt => "-Select a division"} %></td></tr>
<%=show_custom_fields @product, {:form=>true, :table=>true}%>
</table>	
<hr />
<div id='classifications'>
<% @product.classifications.build %>
<% classification_count = 0 %>
<% @product.classifications.each {|c| c.tariff_records.build } %>
<% f.fields_for :classifications do |cf| %>
  <div class='classification_box cf_row'>
    <table>
      <tr class='hover'><td class='label_cell'><%=cf.label :compliant_description, "Country"%>:</td><td><%= cf.collection_select :country_id, Country.all, :id, :name, options ={:prompt => "-Select a country"} %></td></tr>
      <tr class='hover'><td class='label_cell'><%=cf.label :binding_ruling_number, "Binding Ruling Number"%>:</td><td><%=cf.text_field :binding_ruling_number %></td></tr>
      <tr class='hover'><td class='label_cell'><%=cf.label :compliant_description, "Compliant Description"%>:</td><td style='text-align:center;'><%=cf.text_area :compliant_description, "rows" => "4", "style" => "width:98%;"%></td></tr>
      <tr class='hover'><td colspan='2'><%=cf.hidden_field :_destroy, "class" => "cf_destroy"%><a href='#' class='cf_remove'>Remove</a></td></tr>
      <tr><td></td><td>
        <table class='detail_table'>
        <thead>
          <th>HTS 1</th>
          <th>HTS 2</th>
          <th>HTS 3</th>
          <th>Delete</th>    
        </thead>
        <tbody class='tr_body'>
          <% cf.fields_for :tariff_records do |tf| %>
            <%= render :partial => 'tariff_record_row', :locals => {:f => tf } %>
          <% end %>
          <tr><td colspan='2'><a id='add_tr_<%=classification_count%>' href="javascript:add_tf_row($('#add_tr_<%=classification_count%>'),<%=classification_count%>);">Add</a></td></tr>
        </tbody>
      </table>
      </td></tr>
    </table>
    <br />
  </div>
  <% classification_count += 1 %>
<% end %>
</div>
<% end %>
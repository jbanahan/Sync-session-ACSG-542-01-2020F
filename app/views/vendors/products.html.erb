<div class='container-fluid'>
  <div class='row'>
    <div class="col-xs-8">
      <input type='text' class='form-control' id='name-filter' data-infinite-table-filter='#product-rows' data-infinite-table-param='q' placeholder='Filter by name'/>
    </div>
    <div class="col-xs-4">
      <button data-infinite-table-reset='#product-rows' class='btn btn-sm btn-default'>
        Filter
      </button>
    </div>
  </div>
  <table class='detail_table' id='product-rows' data-infinite-table-src='/vendors/<%=@company.id%>/products'>
    <thead>
      <tr>
        <th></th>
        <%[:prod_uid,:prod_name].each do |mfuid|%>
          <th><%=ModelField.find_by_uid(mfuid).label%></th>
        <%end%>
      </tr>
    </thead>
    <tbody>
        <%=render :partial=>'product_rows', locals:{products:@products}%>
    </tbody>
  </table>
  <div><button data-infinite-table-target='#product-rows' class='btn btn-link btn-lg btn-block'>Load More</button></div>
</div>
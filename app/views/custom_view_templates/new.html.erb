<% content_for :javascript do %>
  $(function() {
    $("#btn_save").click(function() {
      $("#frm_cust").submit();
    });
    $("#btn_cancel").click(function() {
      window.location = '<%=url_for @template%>';
    });
  });
<% end %>

<% content_for :action_bar do %>
  <button id='btn_save'>Save</button>
  <button id='btn_cancel'>Cancel</button>
<% end %>

<div class = 'col-md-2'>
  <%= form_for @template, :html=>{:id=>'frm_cust'} do |f| %>
    <div class='form-group'>
      <label for="identifier-num-box">Template Identifier</label>
      <input id='identifier-num-box' class='form-control' type="text" name='template_identifier'>
    </div>
    <div class='form-group'>
      <label for="path-num-box">Template Path</label>
      <input id='path-num-box' class='form-control' type="text" name='template_path'>
    </div>
    <div class="form-group">
    <label for="cm-drop-down">Module</label>
    <select id='cm-drop-down' name='module_type' class='form-control'>
      <% @cm_list.each do |module_name| %>
        <option value="<%= module_name %>"><%= module_name %></option>
      <% end %>
    </select>
   </div>
  <%end%>
</div>
